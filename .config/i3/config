# autolock after three minutes (180 seconds)
# exec "/home/ayush/.config/i3/autolock 150"

#logout and all
set $mode_system System (e) lock, (l) logout, (p) suspend, (h) hibernate, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym e exec --no-startup-id i3lock-fancy , mode "default"
    bindsym l exec --no-startup-id i3-msg exit, mode "default"
    bindsym p exec --no-startup-id i3lock-fancy  && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id i3lock-fancy  && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Control+Mod1+Delete mode "$mode_system"

